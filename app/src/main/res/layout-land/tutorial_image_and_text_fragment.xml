<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:paddingBottom="@dimen/appIntroBottomBarHeight"
                android:background="@color/colorPrimary20Percent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="250dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/titleTextView"
        android:textColor="@color/black_87percent"
        android:textSize="22sp"
        android:padding="16dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/imageView"
        android:layout_width="match_parent"
        android:text="@string/completing_uncompleting_items_title"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/descriptionTextView"
        android:textColor="@color/black_87percent"
        android:padding="16dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="@string/sharing_lists_description"
        android:lineSpacingExtra="3dp"
        android:gravity="left|center"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/titleTextView"
        android:layout_toRightOf="@id/imageView"
        android:layout_alignParentBottom="true" />


</RelativeLayout>